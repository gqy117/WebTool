@model WebToolService.LanguageModel
<li class="dropdown language" style="line-height: 16px;">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
        <img alt="" src="@Url.Content(String.Format("~/Content/assets/img/flags/{0}", Model.CurrentLanguage.PictureName))" />
        <span class="username">@Model.CurrentLanguage.Name
        </span>
        <i class="fa fa-angle-down"></i>
    </a>
    @foreach (var language in Model.ListLanguage)
    {
        <ul class="dropdown-menu">
            <li>
                <a href="javascript:ChangeLanguage('@language.Code');">
                    <img alt="" src="@Url.Content(String.Format("~/Content/assets/img/flags/{0}", language.PictureName))" />
                    @language.Name</a>
            </li>
        </ul>

    }

</li>
