@{ Layout = "~/Views/Account/Login/_loginLayout.cshtml"; }

@model WebToolService.RegisterModel

<div class="content">
    <!-- BEGIN LOGIN FORM -->
    <form id="FormRegister" class="form-vertical login-form" action="@Url.Content("~/Register/Index")" method="POST"  />
    <h3 class="form-title">
        @UIResource.Register</h3>
    <div class="control-group">
        <div class="controls">
            <div class="input-icon left">
                <i class="icon-user"></i>
                <input name="UserName" class="m-wrap" type="text" placeholder="@UIResource.Username" value="@Model.UserName" />
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <div class="input-icon left">
                <i class="icon-lock"></i>
                <input name="Password" class="m-wrap" type="password" style="" placeholder="@UIResource.Password" />
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <div class="input-icon left">
                <i class="icon-lock"></i>
                <input id="FormRegister_ConfirmPassword" name="ConfirmPassword" class="m-wrap" type="password" style="" placeholder="@UIResource.ConfirmPassword" />
            </div>
        </div>
    </div>
    <div class="form-actions">
        <a href="javascript:FormRegister_Submit();" id="login-btn" class="btn green pull-right">
            @UIResource.Register <i class="m-icon-swapright m-icon-white"></i></a>
    </div>
    </form>
    @Html.MyValidationSummary()
    <!-- END LOGIN FORM -->
</div>
<script>
    function FormRegister_Submit() {
        Track('Register', 'Register');
        $('#FormRegister').submit();
    }

    function Register_On_Ready() {
        $("#FormRegister_ConfirmPassword").keyup(function (event) {
            if (event.keyCode == 13) {
                FormRegister_Submit();
            }
        });
    }
    Add_JS_Content('Register_On_Ready();');
</script>