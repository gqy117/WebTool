@using Devshorts.MonadicNull
@using WebTool
@{
    var resourceString = Html.Raw(((BaseController)ViewContext.Controller).ResourceJson);

    string controller = Option.Safe(()=>Request.RequestContext.RouteData.Values["controller"].ToString()).GetValueOrDefault();
    string action = Option.Safe(()=>Request.RequestContext.RouteData.Values["action"].ToString()).GetValueOrDefault();
}
<script>
window.UIResource = @(resourceString);
window.controller = '@controller';
window.action = '@action';
</script>