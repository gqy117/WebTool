@{
    ViewBag.Title = UIResource.Error;
    Layout = "~/Views/Shared/_indexLayout.cshtml";
}

<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">@UIResource.Page500
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="@Url.Action("Index", "Home")">@UIResource.Home</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li><a href="#">@UIResource.Page500</a></li>
            </ul>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid page-500">
                <div class="span5 number">
                    500
                </div>
                <div class="span7 details">
                    <h3>@UIResource.OppsSomethingwentwrong</h3>
                    <p>
                        @UIResource.Wearefixingit<br />
                        @UIResource.Pleasecomebackinawhile<br />
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
